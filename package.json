{
  "name": "bmad-client",
  "version": "0.1.0",
  "private": true,
  "description": "BMad Client Library - SDK for executing BMad Method agents",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "build": "npm run -ws build",
    "typecheck": "npm run -ws typecheck",
    "lint": "eslint .",
    "format": "prettier --write .",
    "example:simple": "tsx examples/simple-agent.ts",
    "example:debug": "tsx examples/debug-agent.ts"
  },
  "workspaces": [
    "packages/*",
    "packages/examples/*",
    "examples"
  ],
  "keywords": [
    "bmad",
    "llm",
    "ai",
    "agents",
    "sdk"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
